<script type="text/javascript">
    function inIframe() {
        try {
            return window.self !== window.top;
        } catch (e) {
            return true;
        }
    }
    if (inIframe()) {
        parent.postMessage('message', '*');
    } else {
        this.window.location.href = '/'
    }
</script>
