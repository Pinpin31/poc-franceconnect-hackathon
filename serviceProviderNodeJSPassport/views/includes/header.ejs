<% include ./includes %>
<div class="container-fluid">
    <div id="banner" class="row-fluid">
        <div class="span1"></div>
        <div class="span3">
            <h2 style="color: white">GUICHET DES PARISIENS</h2>
        </div>
        <div class="span8 hidden-phone">
            <% if (user) { %>
            <span class="span3 offset5" style="color:white">Merci de vous être identifié,
                <%= user %>. <br/>
                        <button class="btn btn-default" onclick="window.location = '/logout'">Se
                            déconnecter
                        </button>
                    </span>
            <% } else { %>
            <div class="span4 offset5" style="color:white; text-align: right">
                <span>Identifiez-vous avec FranceConnect :</span>
                <br/>
                <a class="btn btn-large fancybox" rel="group"
                   href="#fc_login_popin" scrolling="auto"
                   modal="true" autoHeight="false" autoSize="false" width="500px" height="750px"><img
                            src="/images/logoFC.png"/></a>
            </div>
            <% } %>
        </div>
        <div class="span8 hidden-desktop hidden-tablet">
            <% if (user) { %>
            <div class="span" style="color:white">Merci de vous être identifié,
                <%= user %>. <br/>
                <button class="btn btn-default" onclick="window.location = '/logout'">Se
                    déconnecter
                </button>
            </div>
            <% } else { %>
            <div style="color:white">
                Identifiez-vous avec FranceConnect :<br/>
                <a id="fc_login" class="btn btn-large" href="/login_org" style="max-width: 220px">
                    <img src="/images/LogoFC-mini-180x37.png"/>
                </a>
            </div>
            <% } %>
        </div>
    </div>

<div id="fc_login_popin" style="display: none">
</div>

<!-- listener on login success postMessage from popin -->
<script type="text/javascript">
    addEventListener("message", receiveMessage, false);
    function receiveMessage(event) {
        $("#fc_login_popin").hide();
        window.location.href = '/data/form';
    }
</script>

<!-- Add fancyBox -->
<script type="text/javascript" src="/javascripts/jquery.fancybox.pack.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(".fancybox").fancybox({
            closeBtn: '<a title="Close" class="fancybox-item fancybox-close" href="javascript:;"></a>',
            openEffect: 'none',
            closeEffect: 'none',
            nextEffect: 'none',
            prevEffect: 'none',
            scrolling: 'no',
            padding: 0,
            margin: [20, 60, 20, 60],
            afterLoad: function () {
                // l'iframe ne doit être insérée dans le DOM que quand l'utilisateur choisit de se connecter, sinon la mécanique de connexion se lance en tâche de fond
                this.content = '<iframe src="/login_org" style="width: 500px; height: 600px;"></iframe>';
            }
        });
    });
</script>



