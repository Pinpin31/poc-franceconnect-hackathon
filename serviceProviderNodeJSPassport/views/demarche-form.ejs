<% include includes/header.ejs %>
<div class="row-fluid">
    <% include includes/voirie-panel.ejs %>
    <div class="span6 well">
        <form method="POST" id="crecheForm" class="form-horizontal" target="authFranceConnect">
            <fieldset>

                <!-- Form Name -->
                <legend>Vérifiez et complétez les informations suivantes :*</legend>

                <!-- Text input-->
                <div class="form-group row">

                    <label class="control-label span4" for="textinput-0"
                           style="text-align:right;float:left;">Nom</label>

                    <div class="controls">
                        <input id="textinput-0" name="textinput-0" type="text" placeholder=""
                               class="input-large span8" disabled
                               value="<%= userInfo.name.familyName %>">

                    </div>


                </div>


                <!-- Text input-->
                <div class="form-group row">
                    <label class="control-label span4" for="textinput-1"
                           style="text-align:right;float:left;">Prénom</label>

                    <div class="controls">
                        <input id="textinput-1" name="textinput-1" type="text" placeholder=""
                               class="input-large span8" disabled
                               value="<%= userInfo.name.givenName %>">

                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group row">
                    <label class="control-label span4" for="nomEnfant"
                           style="text-align:right;float:left;">Nom de votre enfant</label>

                    <div class="controls">
                        <input id="nomEnfant" name="nomEnfant" type="text" placeholder=""
                               class="input-large span8" required="">

                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group row">
                    <label class="control-label span4" for="prenomEnfant"
                           style="text-align:right;float:left;">Prénom de votre enfant</label>

                    <div class="controls">
                        <input id="prenomEnfant" name="prenomEnfant" type="text" placeholder=""
                               class="input-large span8" required="">

                    </div>
                </div>
            </fieldset>
            <input type="submit" value="Confirmer" class="btn btn-large" onclick="submitInIFrame()">
            <br/>
            <span style="text-size:8px">* Vous allez ensuite être redirigé vers une page qui va vous montrer les données auxquelles va accéder le service pour compléter votre demande. Nous aurons besoin de votre consentement.</span>
        </form>
    </div>
</div>
<script type="text/javascript">
    function submitInIFrame () {
        var screenTabletWith = 767;
        if ($(window).width() > screenTabletWith) {
            $("#crecheForm").submit(function () {
                $.fancybox.open({
                    content: '<iframe name="' + this.target + '" class="fancybox-iframe" border="0" style="width: 500px; height: 400px;" src="<%= authUrl %>"></iframe>',
                    closeEffect: 'none',
                    margin: [20, 60, 20, 60],
                    nextEffect: 'none',
                    openEffect: 'none',
                    padding: 0,
                    prevEffect: 'none',
                    afterShow: function () {
                        $('.fancybox-iframe').load(function () {
                            this.contentWindow.postMessage('focus', '*');
                        });
                    }
                });
            });
        } else {
            $("#crecheForm").unbind().attr('target', '');
        }
    }
</script>
<% include includes/footer %>
